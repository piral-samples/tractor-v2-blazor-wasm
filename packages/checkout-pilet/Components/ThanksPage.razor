@using Microsoft.JSInterop

@page "/checkout/thanks"

@inject IJSRuntime Js

<div data-boundary-page="checkout">
  <Extension Name="header" />
  <main class="c_Thanks">
    <h2 class="c_Thanks__title">Thanks for your order!</h2>
    <p class="c_Thanks__text">We'll notify you, when its ready for pickup.</p>
    <Button Href="/" Variant="secondary">
      Continue Shopping
    </Button>
  </main>
  <Extension Name="footer" />
</div>

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            Js.InvokeVoidAsync("fireConfetti");
        }
    }
}