
@if (!string.IsNullOrEmpty(Href)) {
  <a href="@Href" data-id="@DataId" title="@Title" class="@ButtonClass">
    <div class="c_Button__inner">@ChildContent</div>
  </a>
} else {
  <button
    disabled="@IsDisabled"
    type="@Type"
    value="@Value"
    data-id="@DataId"
    title="@Title"
    class="@ButtonClass">
    <div class="c_Button__inner">@ChildContent</div>
  </button>
}

@code {
    
    [Parameter]
    public string Href { get; set; }
    
    [Parameter]
    public string Title { get; set; }
    
    [Parameter]
    public string Type { get; set; }
    
    [Parameter]
    public bool IsDisabled { get; set; }
    
    [Parameter]
    public bool IsRounded { get; set; }
    
    [Parameter]
    public string DataId { get; set; }
    
    [Parameter]
    public string ClassName { get; set; }
    
    [Parameter]
    public string Variant { get; set; }
    
    [Parameter]
    public string Size { get; set; }
    
    [Parameter]
    public string Value { get; set; }
    
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public string ButtonClassRounded => IsRounded ? "c_Button--rounded" : "";

    public string ButtonClass => $"c_Button c_Button--{Variant} {ClassName} {ButtonClassRounded} c_Button--size-{Size}";
}