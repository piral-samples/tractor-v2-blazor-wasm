<li class="e_Product">
  <a class="e_Product_link" href=@Url>
    <img
      class="e_Product_image"
      src=@Utils.Src(Image, 200)
      src-set=@Utils.SrcSet(Image, [200, 400, 800])
      sizes="300px"
      width="200"
      height="200"
    />
    <span class="e_Product_name">@Name</span>
    <span class="e_Product_price">@Utils.FormatPrice(StartPrice)</span>
  </a>
</li>

@code {
    [Parameter]
    public string Name { get; set; }
    
    [Parameter]
    public decimal StartPrice { get; set; }
    
    [Parameter]
    public string Url { get; set; }

    [Parameter]
    public string Image { get; set; }
}
